# Magento Version
MAGENTO_VERSION=2.4.7

# Base URL (change to your domain in production)
BASE_URL=http://localhost

# Admin User Configuration
ADMIN_FIRSTNAME=Admin
ADMIN_LASTNAME=User
ADMIN_EMAIL=admin@example.com
ADMIN_USER=admin
ADMIN_PASSWORD=Admin@123

# Database Configuration
MYSQL_HOST=mariadb
MYSQL_DATABASE=magento
MYSQL_USER=magento
MYSQL_PASSWORD=SecureDatabasePassword123!
MYSQL_ROOT_PASSWORD=SecureRootPassword123!

# Composer Authentication (Required for installing Magento)
# Get your keys from https://marketplace.magento.com/customer/accessKeys/
COMPOSER_AUTH_PUBLIC=your_public_key_here
COMPOSER_AUTH_PRIVATE=your_private_key_here
